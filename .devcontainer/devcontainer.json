// For format details, see https://aka.ms/devcontainer.json.
{
	"name": "Go CDC",

	// Use the official Go image.
	"image": "mcr.microsoft.com/devcontainers/go:2-1.24-trixie",

	// Install Git and Docker CLI inside the container.
	"features": {
		"ghcr.io/devcontainers/features/git:1": {},
		"ghcr.io/devcontainers/features/docker-outside-of-docker:1": {
			"moby": false
		}
	},

	// Add the VS Code extensions to be installed in the container.
	"customizations": {
		"vscode": {
			"extensions": [
				"golang.go"
			]
		}
	},

	// attach the container to the same cdc-pipeline docker network
	"runArgs": ["--network=cdc-pipeline-network"]

	// Use 'forwardPorts' to make a list of ports inside the container available on the host.
	//"forwardPorts": [8080]

	//Use 'postCreateCommand' to run commands after the container is created.
	// "postCreateCommand": "go version",
}
